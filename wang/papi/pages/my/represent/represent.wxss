.swiper-tab {
  border-bottom: 2rpx solid #f1f1f1;
  text-align: center;
  line-height: 80rpx;
  height: 85rpx;
  background: #fff;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 187rpx;
  color: #999;
}

.on {
  color: #ff3b2f;
  border-bottom: 5rpx solid #ff3b2f;
}

.swiper-box {
  display: block;
  position: absolute;
  top: 100rpx;
  left: 0;
  right: 0;
  bottom: 0;
  height: auto;
  overflow: hidden;
  border-top: 1rpx solid #f1f1f1;
}

.swiper-box>view {
  text-align: center;
}

.scrollview {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 列表  */

.list_box {
  display: flex;
  flex-flow: row wrap;
}

.list {
  width: 50%;
  margin-bottom: 25rpx;
  background: #fff;
  padding: 32rpx;
  box-sizing: border-box;
}

.list_top {
  width: 325rpx;
  height: 325rpx;
  border-radius: 10rpx;
  position: relative;
}

.list_top .price {
  position: absolute;
  left: -10rpx;
  top: 10rpx;
  background: #ff3b2f;
  color: #fff;
  text-align: left;
  padding-left: 10rpx;
  padding-right: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 2rpx 40rpx 40rpx 2rpx;
}

.list_top .cover {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/*首页推荐  */

.index_advice {
  position: absolute;
  z-index: -1;
}

.product_name {
  max-height: 80rpx;
  line-height: 40rpx;
}

.shop_name {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.button_warn {
  display: inline-block;
  border: 1rpx solid #ff3b2f;
  color: #ff3b2f;
  padding: 0 10rpx;
  border-radius: 10rpx;
}

.button_defult {
  display: inline-block;
  border: 1rpx solid #999;
  color: #999;
  padding: 0 10rpx;
  border-radius: 10rpx;
}

.wait_confirm{
  border: none;
}
.sum_rsement {
  line-height: 50rpx;
}

/* 弹窗  */

.content {
  width: 500rpx;
  border-radius: 20rpx;
}

.date_title {
  line-height: 80rpx;
  padding: 0 44rpx;
}

.date_input {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 0 60rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.weui-btn {
  margin: 0;
  width: 242rpx;
  background: #ebebeb;
  text-align: center;
}

/* 操作按钮  */

.operate {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 82rpx;
  border-top: 1rpx solid #ddd;
  margin-top: 20rpx;
}

.operate > view {
  flex: 1;
  color: #0074ff;
  text-align: center;
  font-size: 32rpx;
  height: 100%;
  line-height: 82rpx;
}

.operate > view:nth-child(1) {
  border-right: 1rpx solid #ddd;
}
