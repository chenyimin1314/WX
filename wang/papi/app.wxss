/**app.wxss**/
@import "./utils/weui.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.btn_group {
  padding: 0 30rpx;
}

.btn_group button {
  height: 74rpx;
}
.no_border{
  border: none!important;
}

.bdp {
  border-top: 1rpx solid #f4f4f4;
}

.bdb {
  border-bottom: 1rpx solid #f4f4f4;
}

.bdl {
  border-left: 1rpx solid #f4f4f4;
}

.bdr {
  border-right: 1rpx solid #f4f4f4;
}

page, button, input {
  font-size: 28rpx;
}

/* 弹性布局  */

.flex_row {
  display: flex;
  flex-flow: row nowrap;
}

page {
  background: #f7f7f7;
}

.font28 {
  font-size: 28rpx;
}

.font24 {
  font-size: 24rpx;
}

/* 警告按钮改变背景色  */

button[type='warn'] {
  background-color: #ff3b2f;
}

/*  列表头像处理  */

.header {
  width: 100rpx;
  height: 100rpx;
  position: relative;
}

.header .header_icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.header .vip_icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 0;
  bottom: 0;
}

.full {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

/* 颜色提示 */

.color_gray {
  color: #999;
}

html, page {
  width: 100%;
  height: 100%;
}

.weui-cell {
  color: #333;
  font-size: 28rpx;
}

.right_arrow {
  width: 14rpx;
}

.yellow {
  color: #ffb821;
}

.noData {
  height: 80rpx;
  display: flex;
  align-items: center;
  background: #fff;
  padding: 0 25rpx;
  color: #999;
  justify-content: center;
}

.myScroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

/* 弹窗  */

.popover {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.popover .content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
}
.no_data{
  color: #999!important;
}